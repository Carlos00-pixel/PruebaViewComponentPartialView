@model List<Producto>

<li class="nav-item dropdown" style="background-color: darkgray; color: white">
    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
        Productos
    </a>
    <ul class="dropdown-menu">
        @foreach (Producto prod in Model)
        {
            <li>
                <a class="dropdown-item" asp-controller="Producto"
                    asp-action="Detalles" asp-route-idproducto="@prod.IdInfoArte">
                    @prod.Titulo
                </a>
            </li>
        }
    </ul>
</li>